{
    "name": "dhii/wp-provisioner",
    "description": "An object-oriented wrapper for programmatic installation of WordPress using WP CLI",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co",
            "role": "Continuator"
        },
        {
            "name": "David Naber",
            "email": "kontakt@dnaber.de",
            "role": "Founder"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "symfony/console": "~2.7",
        "symfony/process": "~2.1",
        "inpsyde/wp-cli-site-url": "~1.0",
        "wp-cli/wp-cli": "~0.23"
    },
    "require-dev": {
        "dhii/php-cs-fixer-config": "dev-master",
        "phpunit/phpunit": "4.*",
        "codeclimate/php-test-reporter": "dev-master",
        "ptrofimov/xpmock": "^1.1",
        "php": ">=5.6",
        "composer/installers": "~1.0.12",
        "vlucas/phpdotenv": "^2.0.1",
        "oscarotero/env": "^1.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "johnpbloch/wordpress": "^4.6.1",
        "wpackagist-theme/twentysixteen": "^1.3"
    },
    "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\WpProvision\\": "src/"
        }
    },
    "bin": [
        "bin/wp-provisioner"
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ]
}
